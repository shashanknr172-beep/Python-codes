import java.util.Scanner;

public class SimpleATM {
    public static void main(String[] args) {
        final int PIN = 1234;
        int balance = 5000;
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter your 4-digit PIN: ");
        int enteredPin = sc.nextInt();

        if (enteredPin == PIN) {
            System.out.println(" PIN Verified!");
            System.out.println("1. Check Balance\n2. Withdraw\n3. Deposit");
            System.out.print("Choose an option: ");
            int choice = sc.nextInt();

            switch (choice) {
                case 1: 
                    System.out.println(" Balance: " + balance); break;
                case 2: 
                    System.out.print("Enter amount to withdraw: ");
                    int w = sc.nextInt();
                    if (w <= balance) { balance -= w; System.out.println(" Withdrawn. New Balance: " + balance); }
                    else System.out.println(" Insufficient balance.");
                    break;
                case 3: 
                    System.out.print("Enter amount to deposit: ");
                    int d = sc.nextInt();
                    balance += d;
                    System.out.println(" Deposited. New Balance: " + balance);
                    break;
                default: 
                    System.out.println(" Invalid choice.");
            }
        } else {
            System.out.println(" Wrong PIN. Access Denied.");
        }
        sc.close();
    }
}
